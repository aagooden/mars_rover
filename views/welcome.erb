
<body background="mars_background.jpg">

	<h1>Welcome to Mars Rover Mission Control</h1>
<div class="flex-container">

<form class="" action="mission_info" method="post">

	<h3>Input the grid size as maximum x and y coordinates</h3>
		(<input type="number" name="grid_x_value" placeholder="Grid X value">,
		<input type="number" name="grid_y_value" placeholder="Grid Y value">)<br><br>

	<h3>Input the starting coordinates of Rover #1 as x and y coordinate</h3>
		(<input type="number" name="rover1_x_value" placeholder="Rover 1 X value">,
		<input type="number" name="rover1_y_value" placeholder="Rover 1 Y value">)<br>

	<h3>Input the starting direction of Rover #1</h3>
		<select name="rover1_direction">
		  <option value="N">North</option>
		  <option value="E">East</option>
		  <option value="S">South</option>
		  <option value="W">West</option>
		</select><br>

	<h3>Input Rover #1 moves</h3>
		<input type="text" id="rover1_moves" name="rover1_moves" ><br><br>

<script>
	function forward() {
		document.getElementById('rover1_moves').value += 'M'
	}

	function left() {
		document.getElementById('rover1_moves').value += 'L'
	}

	function right() {
		document.getElementById('rover1_moves').value += 'R'
	}


	function forward2() {
		document.getElementById('rover2_moves').value += 'M'
	}

	function left2() {
		document.getElementById('rover2_moves').value += 'L'
	}

	function right2() {
		document.getElementById('rover2_moves').value += 'R'
	}

</script>

<div class="direction_buttons">
  <button type="button" onclick="forward()">FORWARD</button><br>
  <button type="button" onclick="left()">ROTATE LEFT</button>
  <button type="button" onclick="right()">ROTATE RIGHT</button><br>
</div>

	<h3>Input the starting coordinates of Rover #2 as x and y coordinate</h3>
		(<input type="number" name="rover2_x_value" placeholder="Rover 2 X value">,
		<input type="number" name="rover2_y_value" placeholder="Rover 2 Y value">)


	<h3>Input the starting direction of Rover #2</h3>
		<select name="rover2_direction">
			<option value="N">North</option>
			<option value="E">East</option>
			<option value="S">South</option>
			<option value="W">West</option>
		</select><br><br>

	<h3>Input Rover #2 moves</h3>
		<input type="text" id="rover2_moves" name="rover2_moves" ><br><br>

		<div class="direction_buttons">
		  <button type="button" onclick="forward2()">FORWARD</button><br>
		  <button type="button" onclick="left2()">ROTATE LEFT</button>
		  <button type="button" onclick="right2()">ROTATE RIGHT</button><br>
		</div>

	<input type="submit" name="" value="Submit">

</form>
</div>
</body>
