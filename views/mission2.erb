    ctx.moveTo(multiplyer * i, 0);
    ctx.lineTo(multiplyer * i, (grid_size[1] + 1) * multiplyer);
    ctx.stroke();
}

//draw horizontal lines
// console.log(`multiplyer is ${multiplyer}`)
